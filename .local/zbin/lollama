#!/usr/bin/env zsh

local cmd=${1:-run} supported_cmd=( show run stop pull cp rm )

if (( $supported_cmd[(I)$cmd] )); then
  if [[ -n $1 ]]; then
    shift
  fi

  if [[ $cmd == pull ]]; then
    # TODO: pull from this unofficial source.
    # https://craigahobbs.github.io/ollama-chat/models/models.json
    print "Not implemented."

  elif [[ $cmd == stop ]]; then
    local model=($(
      ollama ps |
      fzf --prompt="â¯ ollama $cmd " --header-lines=1 --multi |
      cut -d ' ' -f1
    ))
  else
    local model=($(
      ollama list |
      fzf --prompt="â¯ ollama $cmd " --header-lines=1 $( [[ $cmd == rm ]] && printf --multi ) |
      cut -d ' ' -f1
    ))
  fi

  if [[ -n $model ]]; then
    print "ollama $cmd $model $@"
    ollama $cmd $model $@
  fi
else
  print "Unsupported command. $0:t only accepts the following:\n $supported_cmd" >&2
  return 1
fi
