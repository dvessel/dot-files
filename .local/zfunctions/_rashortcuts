#compdef rashortcuts

# zsh completions for 'rashortcuts'
local arguments

arguments=(
  '--favorites[favorites playlist]'
  '--history[history playlist]'
  {-p,--playlist}'[path/to/playlist.lpl]'
  '--process-all[process all entries for a given playlist]'
  '--process-existing[like all but process existing in the output directory]'
  {-t,--template}'[path/to/template-folder]'
  {-h,--help}'[view help.]'
  '*:filename:_files'
)

_arguments -s $arguments
