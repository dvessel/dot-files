[core]
	whitespace=fix,-indent-with-non-tab,-indent-with-tab,trailing-space,cr-at-eol
	editor = code
	excludesfile = ~/.config/git/ignore
[diff]
	tool = opendiff
[merge]
	tool = opendiff
[pull]
	ff = only
	rebase = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
[alias]
	# When pruning ignores unreachable commits.
	# https://www.sean-lloyd.com/post/using-git-prune/
	reflog-expire-all = git reflog expire --expire=now --expire-unreachable=now --all
